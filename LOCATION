<!DOCTYPE html>
<html>
<head>
    <title>Captura de Ubicaci칩n</title>
</head>
<body>
    <script>
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                const lat = position.coords.latitude;
                const lon = position.coords.longitude;

                // Enviar los datos a Zapier
                fetch('TU_URL_DEL_WEBHOOK_AQUI', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        latitude: lat,
                        longitude: lon
                    })
                }).then(response => {
                    console.log('Datos enviados a Zapier:', response);
                }).catch(error => {
                    console.error('Error al enviar los datos a Zapier:', error);
                });
            }, function(error) {
                console.error("Error al obtener la ubicaci칩n: ", error);
            });
        } else {
            console.log("Geolocalizaci칩n no est치 disponible en este dispositivo.");
        }
    </script>
</body>
</html>
